@model TiendaMusica.Logica.ViewModels.AlbumsPorArtistaViewModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm("Editar", "Album", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AlbumsPorArtistaViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Artista, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
               @Html.EditorFor(model => model.Artista, new { htmlAttributes = new { disabled = "disabled", @class = "form-control" } })

                @*@Html.ValidationMessageFor(model => model.Artista, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Album, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Album, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Album, "", new { @class = "text-danger" })
                <input name="album" hidden value="@Model.Album.ToString()" />
                <input name="artista" hidden value="@Model.Artista.ToString()" />
                <input name="Idartista" hidden value="@Model.IdArtista" />
                <input name="Idalbum" hidden value="@Model.IdAlbum" />
            </div>
        </div>

        <div class="form-group">
            

            @{
                string strcampoAlbum = @Model.Album.ToString();
                strcampoAlbum = strcampoAlbum + ".jpg";
            
            <img src="..\..\..\Imagenes\Album\@strcampoAlbum" width="300" height="300" />

            }
        </div>


        <div class="form-group">
            <label>Seleccione un Archivo</label>
            <input type="file" name="archivo" class="form-control" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
